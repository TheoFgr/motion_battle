<div class="container-game">
  <div class = "game-number">
    <h1>Game <%= @game.id %></h1>
  </div>
  <div class = "button-participe">
    <%= button_to "Participe", participations_path, methode: :post, remote: true, class:"bouton-show"%>
  </div>
  <div class = "pseudo">
    <div class= "controller" data-controller='game-subscriptions'  data-game-subscriptions-game-id-value="<%= @game.id %>">
      <div class="participations" data-game-subscriptions-target="participations">
        <% @game.participations.each do |participation| %>
          <%= render "participations/participation", participation: participation %>
        <% end %>
      </div>
      <div class= "game"  data-game-subscriptions-target="game">
      </div>
    </div>
  </div>
</div>
